%h3.grad= t(:tasks)
.tasks
  - if object.tasks.for(current_user).incomplete.any?
    = render :partial => 'tasks/task', :collection => object.tasks.for(current_user).incomplete
  
  .add= link_to raw("<b>+</b>#{t(:add_task)}"), new_task_path(:asset_id => object.id, :asset_type => object.class.to_s, :return_to => request.fullpath), :id => 'add_task'
.clear
