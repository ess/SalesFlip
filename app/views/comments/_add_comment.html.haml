.add_comment
  = simple_form_for @comment || Comment.new, :html => { :multipart => true } do |form|
    = form.hidden_field :commentable_type, :value => object.class.to_s
    = form.hidden_field :commentable_id, :value => object.id
    = render :partial => 'comments/form', :locals => { :form => form }
