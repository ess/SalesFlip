%h2.title
  Contacts
  = add_new t('add_contact'), new_contact_path
.contacts
  = render :partial => 'contacts/contact', :collection => @contacts
  = will_paginate @contacts
- content_for :sidebar do
  = render :partial => "shared/index_filter", :locals => { :collection => Contact.sources.sort, :selector => :source_is}
  .gold.box
    %h3= t(:data_actions)
    %ul.plain
      %li= link_to t(:export_as_csv), export_contacts_path, :id => 'export_as_csv'
