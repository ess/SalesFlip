%h2.title= t(:my_profile)
%dl.profile
  %dt= t(:avatar)
  %dd= image_tag @user.gravatar_url
%dl.profile
  %dt= t(:email)
  %dd= @user.email
%dl.profile
  %dt Dropbox
  %dd
    = mail_to "#{@user.api_key}@salesflip.appspotmail.com"
    %span.help
      %span.up-arrow &#11014;
      %em= t('info.dropbox')
= simple_form_for @user do |form|
  = hidden_field_tag :return_to, request.url
  %dl.profile
    %dt= form.label :signature
    %dd= form.text_area :signature
  .act.pad
    = form.button :submit, t(:save), :id => 'lead_submit'
